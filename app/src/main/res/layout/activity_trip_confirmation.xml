<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow_orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_heading_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONFIRMATION"
                android:letterSpacing="0.03"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/quicksand_bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/iv_center_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/confirmation_car_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_send_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Confirmation Request"
        android:background="@drawable/bg_rect_fill_yellow"
        android:paddingStart="5dp"
        android:visibility="gone"
        android:paddingEnd="5dp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_center_image"/>

    <TextView
        android:id="@+id/tv_ready_to_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get ready to pickup"
        android:layout_marginBottom="75dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/quicksand_medium"
        app:layout_constraintBottom_toTopOf="@id/iv_center_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_trip_confirmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Confirmed!"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="26sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:fontFamily="@font/quicksand_bold"
        app:layout_constraintBottom_toTopOf="@id/tv_ready_to_pickup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>